{
  "name": "static-jspm-boiler",
  "version": "1.0.0",
  "description": "This is a jQuery-free boilerplate for static websites that use JSPM, ES6 (with ES5 babel transpiler), Stylus, NPM as a task runner, and deploy scripts for App Engine.",
  "main": "dist/index.html",
  "homepage": "https://github.com/nick-jonas/static-jspm-boiler",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-jonas/static-jspm-boiler.git"
  },
  "scripts": {
    "remove-dist": "rm -rf ./dist",
    "copy-app-into-dist": "mkdir ./dist && cp -R ./app/** ./dist",
    "watch-stylus": "stylus --watch ./stylus/main.styl --out ./app/css",
    "build-stylus": "stylus -u autoprefixer-stylus stylus/main.styl --out dist/css --compress",
    "unbundle": "jspm unbundle",
    "bundle": "jspm bundle src/main.js app/src/main-bundle.js --inject",
    "deploy-dist": "appcfg.py update .",
    "serve": "npm run unbundle && concurrent \"npm run watch-stylus\" \"jspm-server --port=6969 ./app\"",
    "serve-dist": "concurrent \"jspm-server --port=6969 ./dist\"",
    "build": "npm run bundle && npm run remove-dist && npm run copy-app-into-dist && npm run build-stylus",
    "deploy": "npm run build && npm run deploy-dist",
    "postinstall": "jspm install"
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.9.1",
    "babel-preset-es2015": "^6.3.13",
    "grunt-babel": "^6.0.0",
    "grunt-shell": "^1.1.2",
    "jspm": "^0.16.27",
    "stylus": "^0.53.0"
  },
  "author": {
    "name": "Nick Jonas",
    "email": "njonas@google.com",
    "url": "http://nickjonas.nyc"
  },
  "readmeFilename": "README.md",
  "license": "Unlicense",
  "keywords": [
    "es6",
    "jspm",
    "boilerplate",
    "babel",
    "systemjs"
  ],
  "jspm": {
    "directories": {
      "baseURL": "app",
      "packages": "app/src/lib"
    },
    "dependencies": {
      "babel-plugin-lodash": "npm:babel-plugin-lodash@^2.0.1",
      "lodash/lodash": "github:lodash/lodash@^4.3.0",
      "reqwest": "github:ded/reqwest@^2.0.5"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  }
}
